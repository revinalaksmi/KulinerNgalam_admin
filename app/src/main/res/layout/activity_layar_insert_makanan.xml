<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".LayarInsertMakanan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgAddGambar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_user" />

        <Button
            android:id="@+id/btAddGambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgAddGambar"
            android:text="Pilih Foto" />

        <Button
            android:id="@+id/btAddCapt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btAddGambar"
            android:text="Ambil Foto" />

        <TextView
            android:id="@+id/tvAddMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btAddCapt"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:text="Nama Menu :"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/edtAddMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddMenu"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddMenu"
            android:hint="Basko bulat"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvAddKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddMenu"
            android:text="Kategori :"
            android:layout_marginTop="5pt"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/edtAddKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddKategori"
            android:layout_alignLeft="@+id/edtAddMenu"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddAlamat"
            android:hint="Main Course"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvAddHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddKategori"
            android:text="Harga :"
            android:layout_marginTop="5pt"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/edtAddHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddHarga"
            android:layout_alignLeft="@+id/edtAddMenu"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddHarga"
            android:hint="Rp 9000"
            android:inputType="phone"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tvAddAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddHarga"
            android:text="Alamat :"
            android:layout_marginTop="5pt"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/edtAddAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddAlamat"
            android:layout_alignLeft="@+id/edtAddMenu"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddAlamat"
            android:hint="Jalan Kelaparan no 1"
            android:inputType="textMultiLine"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tvAddReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddAlamat"
            android:layout_marginTop="10pt"
            android:text="Review :"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/edtAddReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddReview"
            android:layout_alignLeft="@+id/edtAddMenu"
            android:layout_alignParentEnd="true"
            android:textSize="16dp"
            android:inputType="textMultiLine"
            android:layout_toRightOf="@+id/tvAddReview"
            android:hint="Bakso bulat seperti bola pimpong"/>

        <TextView
            android:id="@+id/tvAddTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddReview"
            android:layout_marginTop="10pt"
            android:text="Tanggal :"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/edtAddTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddTanggal"
            android:layout_alignLeft="@+id/edtAddMenu"
            android:layout_alignParentEnd="true"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/tvAddTanggal"
            android:hint="01-01-2018"/>

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddTanggal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btAddData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="POSTING"/>

            <Button
                android:id="@+id/btAddBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="BACK"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAddMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/LinearLayout"
            android:hint="Pesan"
            android:inputType="textMultiLine"
            android:textSize="20dp"/>
    </RelativeLayout>
</ScrollView>
